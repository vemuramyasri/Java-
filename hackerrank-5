import java.util.*;
import java.io.*;

class Solution{
    public static void main(String []argh){
        Scanner in = new Scanner(System.in);
        int t=in.nextInt();
        for(int i=0;i<t;i++){
            int a = in.nextInt();
            int b = in.nextInt();
            int n = in.nextInt();
            // We use 'currentSum' to keep track of the series value
            int currentSum = a;
            
            for(int j = 0; j < n; j++){
                // Math.pow returns a double, so we cast to int.
                // Alternatively, use a variable that doubles each time.
                currentSum += (Math.pow(2, j) * b);
                
                // Print the result followed by a space
                System.out.print(currentSum + " ");
            }
            // After printing the n terms, move to a new line for the next query
            System.out.println();
        }
        in.close();
    }
}
